.admin-login-wrap {
  width: 100vw;
  height: 100vh;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
}

.admin-login-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.admin-form-wrapper {
  position: relative;
  width: 80%;
  min-height: 200rpx;
  display: flex;
  flex-direction: column;
}

.admin-form-wrapper .form {
  width: 100%;
  border-radius: 24rpx;
  background: rgb(255, 255, 255, 0.6);
  display: flex;
  flex-direction: column;
}

.username {
  width: 40rpx;
  height: 40rpx;
  margin: 36rpx 32rpx;
}

.form-row {
  display: flex;
  align-items: center;
}

.line {
  width: 1px;
  height: 50rpx;
  background: rgb(90, 90, 90);
  margin-right: 24rpx;
}

.input {
  height: 50rpx;
}

.login-btn {
  width: 100%;
  height: 88rpx;
  border-radius: 10rpx;
  margin-top: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgb(255, 255, 255, 0.6);
}

.back-login-btn {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 42rpx;
  color: rgb(33, 9, 247);
}
