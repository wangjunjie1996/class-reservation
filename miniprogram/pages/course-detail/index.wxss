.course-box {
  width: 95%;
  border-radius: 18rpx;
  background: #fff;
  display: flex;
  flex-direction: column;
  margin: 28rpx auto 0;
}

.course-box .header {
  width: 100%;
  border-bottom: 1px solid rgb(207, 207, 207);
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 0;
}

.course-box .header .left {
  display: flex;
  align-items: center;
  flex: 1;
}

.course-box .header .left image {
  width: 76rpx;
  min-width: 76rpx;
  height: 76rpx;
  border-radius: 12rpx;
  margin: 0 26rpx;
}

.course-header-name {
  font-size: 36rpx;
  font-weight: bold;
  box-sizing: border-box;
  line-height: 50rpx;
  word-break: break-all;
}

.course-time-between {
  width: 250rpx;
  border-radius: 12rpx;
  background: rgb(255, 225, 190);
  color: rgb(161, 5, 0);
  padding: 10rpx;
  margin: 0 16rpx;
  font-weight: bold;
  font-size: 34rpx;
  text-align: center;
}

.content-wrap {
  display: flex;
  flex-direction: column;
  margin-top: 16rpx;
  padding-bottom: 16rpx;
  border-bottom: 1px solid rgb(235, 234, 234);
}

.content-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 10rpx 26rpx 0;
  font-size: 28rpx;
  color: rgb(172, 81, 59);
}

.content-row text:first-child {
  width: 200rpx;
  color: rgb(134, 134, 134);
}

.footer-wrap {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 26rpx;
}

.reservation-count {
  font-size: 36rpx;
  font-weight: bold;
  color: rgb(173, 56, 2);
  flex: 1;
}

.reservation-count text {
  font-size: 26rpx;
  margin-right: 12rpx;
}

.footer-wrap button {
  width: 160rpx;
  height: 56rpx;
  border-radius: 32rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-image: linear-gradient(to right bottom, rgb(90, 33, 0), rgb(255, 102, 0));
  color: #fff;
  font-size: 24rpx;
  padding: 0 !important;
}

.tab {
  width: 100%;
  height: 66rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
  background: #fff;
  margin-top: 44rpx;
  padding: 12rpx 0;
}

.tab-col {
  height: 56rpx;
  box-sizing: border-box;
  padding: 8rpx 24rpx;
  border-radius: 28rpx;
  background: rgb(196, 196, 196);
}

.tab-col.sel {
  background: rgb(190, 60, 0);
  color: #fff;
}

.reservations {
  margin-top: 28rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.reservation-box {
  width: calc(100% - 24rpx);
  min-height: 124rpx;
  background: #fff;
  box-sizing: border-box;
  padding: 18rpx 28rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin: 16rpx auto;
  border-radius: 12rpx;
}

