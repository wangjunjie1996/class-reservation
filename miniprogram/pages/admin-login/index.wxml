<view class="admin-login-wrap">
  <image class="admin-login-bg" src="../../images/admin-login-bg.jpg"></image>
  <view class="admin-form-wrapper">
    <view class="form">
      <view class="form-row">
        <image class="username" src="../../images/icons/username.png"></image>
        <view class="line"></view>
        <input class="input" placeholder="账号" bindinput="onNameChange" />
      </view>

      <view class="form-row">
        <image class="username" src="../../images/icons/password.png"></image>
        <view class="line"></view>
        <input class="input" password placeholder="密码" bindinput="onPassChange" />
      </view>
    </view>

    <view class="login-btn" bindtap="login">登录</view>
    <view class="back-login-btn" bindtap="toLogin">返回普通登录</view>
  </view>
</view>