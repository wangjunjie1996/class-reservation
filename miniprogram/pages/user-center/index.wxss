.user-center-wrap {
  width: 100%;
  display: flex;
  flex-direction: column;
}

.user-center-wrap .nav-bar {
  width: 100%;
  background: transparent;
  display: flex;
  flex-direction: column;
  position: fixed;
  top: 0;
  left: 0;
}

.user-center-wrap .status-bar {
  width: 100%;
  background: transparent;
}

.user-center-wrap .nav {
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-weight: bold;
}

.user-center-wrap .top {
  width: 100%;
  height: 470rpx;
  display: flex;
  background: linear-gradient(rgb(253, 153, 2) 40%, rgb(253, 153, 2, 0));
  box-sizing: border-box;
}

.top-con {
  width: 96%;
  height: 200rpx;
  background: #fff;
  border-radius: 18rpx;
  margin: 76rpx auto 60rpx;
  box-sizing: border-box;
  padding: 36rpx;
  display: flex;
  align-items: center;
}

.top .default-user-png {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-right: 40rpx;
}

.user-info {
  display: flex;
  flex-direction: column;
}

.user-info .name {
  font-size: 48rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
}

.user-info .sex {
  font-size: 32rpx;
  font-weight: 600;
  margin-left: 8rpx;
  color: rgb(179, 91, 9);
}

.user-info .phone {
  font-size: 32rpx;
  margin-top: 10rpx;
}

.menu-wrap {
  width: 100%;
  display: flex;
  flex-direction: column;
  background: white;
  box-shadow: 0 0 16rpx 0 rgb(207, 207, 207);
}

.menu-row {
  width: 100%;
  display: flex;
  align-items: center;
  border-bottom: 1px solid rgb(230, 230, 230);
  box-sizing: border-box;
  padding: 28rpx 46rpx;
}

.menu-row image {
  width: 48rpx;
  height: 48rpx;
  margin-right: 40rpx;
}

.log-out {
  width: 100%;
  height: 88rpx;
  background: white;
  margin-top: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: rgb(241, 78, 2);
}
